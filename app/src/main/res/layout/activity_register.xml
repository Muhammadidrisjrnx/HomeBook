<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2FAAD4"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Register">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="304dp"
            android:layout_height="62dp"
            android:layout_marginBottom="20dp"
            app:srcCompat="@drawable/homebook" />

        <EditText
            android:id="@+id/ednama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="#ffff"
            android:drawableLeft="@drawable/username"
            android:hint="  Name"
            android:inputType="textAutoCorrect"
            android:padding="6dp"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/edusername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="#ffff"
            android:drawableLeft="@drawable/username"
            android:hint="  Email"
            android:inputType="textEmailAddress"
            android:padding="6dp"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/edpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="#ffff"
            android:drawableLeft="@drawable/password"
            android:hint="  Password"
            android:inputType="textPassword"
            android:padding="6dp"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/edalamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="#ffff"
            android:drawableLeft="@drawable/alamat"
            android:hint="  Address"
            android:inputType="text"
            android:padding="6dp"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/edtlp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="#ffff"
            android:drawableLeft="@drawable/telepon"
            android:hint="  Phone"
            android:inputType="number"
            android:padding="6dp"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btnregister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#007eac"
            android:text="Register"
            android:textColor="#ffff" />

        <TextView
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:onClick="HaveAccount"
            android:text="You Have Any Account? "
            android:textColor="#ffff" />

    </LinearLayout>

</LinearLayout>